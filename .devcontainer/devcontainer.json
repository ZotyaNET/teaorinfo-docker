{
  "name": "Laravel Dev Container",
  "remoteUser": "vscode",
  "runArgs": ["--memory=4gb", "--cpus=2", '--network=bridge'],
  "workspaceFolder": "/workspace/teaorinfo-docker",
  "forwardPorts": [
    8000, 3306, 5173
  ],
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "postCreateCommand": "cp .env.dev .env && make build",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-tslint-plugin",
        "ms-azuretools.vscode-docker",
        "bmewburn.vscode-intelephense-client",
        "xdebug.php-debug",
        "onecentlin.laravel-blade",
        "onecentlin.laravel5-snippets",
        "mikestead.dotenv",
        "streetsidesoftware.code-spell-checker"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "editor.formatOnSave": true,
        "files.associations": {
          "*.blade.php": "html"
        }
      }
    }
  }
}
